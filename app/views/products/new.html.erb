<% provide(:title, 'Add product') %>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@product) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :price %>
      <%= f.text_field :price %>

      <%= f.label :food_type %>
      <%= f.select(:food_type, [['Main course', 1], ['Additional food', 2], ['Beverages', 3]]) %>

      <%= f.submit "Add product!", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>